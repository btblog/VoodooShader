<VoodooConfig>
    <Variables>
        <Variable name="adapter">Null</Variable>
        <Variable name="Null_Logname">NullTest</Variable>
    </Variables>

    <Core>
        <Logger>{1d3d7f86-FAKE-THIS-FAKE-005056c00000}</Logger>
        <HookSystem>{1d3d7fab-6f32-11e0-8ac0-005056c00000}</HookSystem>
        <FileSystem>{1d3d7fad-6f32-11e0-8ac0-005056c00000}</FileSystem>
        <Adapter>{1d3d7faa-6f32-11e0-8ac0-005056c00000}</Adapter>

        <!-- Log filename. -->  
        <LogFile>$(runroot)\Voodoo_$($(adapter)_Logname)</LogFile> 
        <LogLevel>0xFF</LogLevel>
    </Core>

    <WFileSystem>
        <!-- Use search paths below for all files. (not implemented) -->
        <RewritePaths enabled="false" /> 

        <SearchPaths>
            <Path>$(globalroot)\resources\common\</Path>
            <Path>$(globalroot)\resources\$(adapter)</Path>
            <Path>$(localroot)\resources\</Path>
            <Path>$(runroot)\resources\</Path>
        </SearchPaths>
    </WFileSystem>

    <!-- Settings for Frost_Adapter class. -->
    <Frost_Adapter>
        <PostShaders>
            <Shader>test.cgfx</Shader>
            <Shader>voodoologo.cgfx</Shader>
        </PostShaders>
    </Frost_Adapter>

    <!-- Settings for Gem_Adapter class. -->
    <Gem_Adapter>
        <TrueHDR enabled="false" />
        <PostShaders>
            <Shader>test.cgfx</Shader>
            <Shader>voodoologo.cgfx</Shader>
        </PostShaders>
    </Gem_Adapter>

</VoodooConfig>
